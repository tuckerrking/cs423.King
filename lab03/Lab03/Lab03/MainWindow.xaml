<Window x:Class="Lab03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnStart" Content="StartAnimation" Click="BtnStart_Click"/>
            <TextBlock x:Name="tbLabel" Text="Binary Tree" HorizontalAlignment="Center"/>
            <Canvas x:Name="Canvas1" Height="300" Width="300" Margin="20" Background="White"/>
        </StackPanel>
    </Viewbox>
</Window>
